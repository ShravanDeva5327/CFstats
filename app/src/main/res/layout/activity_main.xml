<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Input field for the Codeforces handle -->
    <EditText
        android:id="@+id/handleEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Codeforces Handle" />

    <!-- New Button for triggering the API call -->
    <Button
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_marginTop="8dp"/>

    <com.example.cfstats.ContributionGraphView
        android:id="@+id/contributionGraphView"
        android:layout_width="wrap_content"
        android:layout_height="107dp"
        android:layout_marginTop="16dp"
        android:minHeight="200dp" />
</LinearLayout>
